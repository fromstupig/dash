{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dealer-modules/*": ["apps/dealer-sass/src/app/modules/*"],
      "@dealer-shared/*": ["apps/dealer-sass/src/app/shared/*"],
      "@dealer-core/*": ["apps/dealer-sass/src/app/core/*"],
      "@dash/types": ["libs/types/src/index.ts"],
      "@dealer/services": ["libs/services/src/index.ts"],
      "@dash/config": ["libs/config/src/index.ts"],
      "@dash/api-client": ["libs/api-client/src/index.ts"],
      "@dash/common/*": ["apps/dealer-sass/src/app/common/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
